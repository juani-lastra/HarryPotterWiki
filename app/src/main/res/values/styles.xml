<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonMainActivityStyle">
        <item name="android:textSize">@dimen/main_button_text_size</item>
        <item name="fontFamily">@font/hpfont</item>
        <item name="android:padding">@dimen/padding_main_button</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">@integer/shadow_radius_size</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="HouseTitleStyle" parent="ButtonMainActivityStyle">
        <item name="android:layout_marginTop">@dimen/margin_houses_title</item>
        <item name="android:padding">@dimen/padding_houses_icons_button</item>
        <item name="android:textSize">@dimen/house_title_text_size</item>
    </style>

    <style name="NoConnectionStyle">
        <item name="android:padding">@dimen/padding_houses_icons_button</item>
        <item name="android:textSize">@dimen/house_title_text_size</item>
        <item name="fontFamily">@font/hpfont</item>
        <item name="android:textColor">@color/slytherin_grey</item>
    </style>

    <style name="HousesIconsStyle">
        <item name="android:padding">@dimen/padding_houses_icons_button</item>
        <item name="contentDescription">@string/app_name</item>
    </style>

    <style name="HousesDescriptionStyle">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:padding">@dimen/padding_main_button</item>
        <item name="android:textSize">@dimen/houses_descriptions_text_size</item>
        <item name="android:fontFamily">@font/fontdescriptions</item>
        <item name="android:layout_margin">@dimen/margin_houses_descriptions</item>
    </style>

    <style name="DetailsDescriptionStyle">
        <item name="android:textSize">@dimen/houses_descriptions_text_size</item>
        <item name="android:fontFamily">@font/fontdescriptions</item>
        <item name="android:layout_margin">@dimen/margin_houses_descriptions</item>
    </style>

    <style name="HeadsDescriptionStyle">
        <item name="android:padding">@dimen/padding_main_button</item>
        <item name="android:textSize">@dimen/houses_descriptions_text_size</item>
        <item name="android:fontFamily">@font/fontdescriptions</item>
        <item name="android:layout_margin">@dimen/margin_houses_descriptions</item>
    </style>

    <style name="ToolbarTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/main_button_text_size</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/hpfont</item>
        <item name="android:padding">@dimen/padding_main_button</item>
    </style>
</resources>
