<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HarryPotterWiki" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gryffindor_color_heavy_red</item>
        <item name="colorPrimaryVariant">@color/gryffindor_color_red</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gryffindor_color_gold</item>
        <item name="colorSecondaryVariant">@color/gryffindor_color_yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnSecondaryContainer">@color/whiteTransparent</item>

        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
</resources>
