<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HarryPotterWiki" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/slytherin_color_heavy_green</item>
        <item name="colorPrimaryVariant">@color/slytherin_color_green</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/slytherin_heavy_grey</item>
        <item name="colorSecondaryVariant">@color/slytherin_grey</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
</resources>
